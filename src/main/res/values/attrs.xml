<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--   region ___ InApp keyboard ___ -->

    <declare-styleable name="InAppKeyboardView">
        <!-- Default KeyboardView style. -->
        <attr name="keyboardViewStyle" format="reference" />
        <!-- Image for the key. This image needs to be a StateListDrawable, with the following
             possible states: normal, pressed, checkable, checkable+pressed, checkable+checked,
             checkable+checked+pressed, focused. -->

        <attr name="keyStyle" format="reference" />

        <attr name="keyBackground" format="reference" />
        <!-- Size of the text for character keys. -->
        <attr name="keyTextSize" format="dimension" />
        <!-- Color to use for the label in a key -->
        <attr name="keyTextColor" format="color" />
        <!-- Default width of a key, in pixels -->
        <attr name="keyWidth" format="dimension" />
        <!-- Default height of a key, in pixels -->
        <attr name="keyHeight" format="dimension" />
        <!-- Default horizontal gap between keys -->
        <attr name="keyHorizontalGap" format="dimension" />
        <!-- Default vertical gap between rows of keys -->
        <attr name="keyVerticalGap" format="dimension" />
    </declare-styleable>


    <declare-styleable name="InAppKeyboard">
        <!-- Mode of the keyboard. If the mode doesn't match the
             requested keyboard mode, the row will be skipped -->
        <attr name="keyboardMode" format="integer" />
    </declare-styleable>
    <declare-styleable name="InAppKeyboard_Row">
        <!-- Row keys alignment-->
        <attr name="keyAlignment">
            <flag name="center" value="0" />
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>

        <attr name="marginTop" format="dimension" />
        <attr name="marginLeft" format="dimension" />
        <attr name="marginRight" format="dimension" />
        <attr name="marginBottom" format="dimension" />

    </declare-styleable>
    <declare-styleable name="InAppKeyboard_Key">
        <!-- The label to display on the key -->
        <attr name="keyLabel" format="string" />
        <!-- The key code value  -->
        <attr name="code" format="integer" />
        <!-- The icon to display on the key instead of the label -->
        <attr name="icon" format="reference" />
        <!-- The string of characters to output when this key is pressed -->
        <attr name="keyOutputText" format="string" />

        <!-- Whether this is a toggle key -->
        <attr name="isSticky" format="boolean" />
        <!-- Whether this is an action only key such as search, remove -->
        <attr name="isAction" format="boolean" />

        <!-- This key occupy more than 1 key space horizontally -->
        <attr name="hSizeMultiply" format="integer" />

    </declare-styleable>
    <!--   endregion ___ InApp keyboard ___  -->

</resources>